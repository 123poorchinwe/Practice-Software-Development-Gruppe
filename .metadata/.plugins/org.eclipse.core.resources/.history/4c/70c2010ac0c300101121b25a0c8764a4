
public class Main {
   
    public static double[][] idw(double[][] data) {
        return grid.fill(data);
    }
    public static void main(String[] args) {
        double[][] in = {
                {1.0, Double.NaN, 3.0},
                {Double.NaN, Double.NaN, 2.0},
                {4.0, 5.0, Double.NaN}
        };
        double[][] out = idw(in);
        for (double[] row : out) {
            for (double v : row) System.out.printf("%7.3f ", v);
            System.out.println();
        }
    }
}